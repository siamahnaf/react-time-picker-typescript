{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/esm/types"
  },
  "files": [
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}